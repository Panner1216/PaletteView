<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPickerView">
        <!--拖动圆的大小-->
        <attr name="indicator_width" format="dimension" />
        <!--拖动圆的颜色-->
        <attr name="indicator_color" format="color" />
        <!--拖动圆可用图片代替-->
        <attr name="indicator_icon" format="reference" />
        <!--取色盘的大小-->
        <attr name="picker_width" format="dimension" />
    </declare-styleable>
    <!--矩形的去色盘-->
    <declare-styleable name="RectanglePickerView">
        <attr name="indicator_width_rect" format="dimension" />
        <attr name="indicator_color_rect" format="color" />
        <attr name="indicator_icon_rect" format="reference" />
        <attr name="picker_height_rect" format="dimension" />
        <attr name="picker_width_rect" format="dimension" />
    </declare-styleable>
</resources>
